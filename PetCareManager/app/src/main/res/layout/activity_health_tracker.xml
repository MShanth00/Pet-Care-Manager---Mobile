<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#453838"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Pet Care Manager"
        android:textColor="#EBE5E5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Spinner -->
    <Spinner
        android:id="@+id/spinnerPets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#E6D7D7"
        android:elevation="2dp"
        android:padding="12dp"
        android:textColor="#333333" />

    <!-- Date Input -->
    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="false"
        android:hint="Date"
        android:padding="12dp"
        android:textColor="#333333"
        android:textColorHint="#888888" />

    <!-- Description Input -->
    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:hint="Description"
        android:padding="12dp"
        android:textColor="#333333"
        android:textColorHint="#888888" />

    <!-- Notes Input -->
    <EditText
        android:id="@+id/editTextNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:hint="Notes"
        android:padding="12dp"
        android:textColor="#333333"
        android:textColorHint="#888888" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSaveHealthRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#6200EE"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Health Records Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Health Records"
        android:textColor="#F4EEEE"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Health Records List -->
    <ListView
        android:id="@+id/listViewHealthRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8C6D6D"
        android:divider="#332F2F"
        android:dividerHeight="1dp"
        android:elevation="2dp"
        android:padding="8dp" />
</LinearLayout>
