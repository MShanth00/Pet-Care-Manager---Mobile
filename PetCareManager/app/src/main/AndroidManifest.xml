<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.petcaremanager">

<!-- Permissions, if needed -->
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

<application
    android:allowBackup="true"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.PetCareManager">

    <!-- Launcher Activity -->
    <activity
        android:name=".Page.Dashboard.LoginActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Other Activities -->
    <activity android:name=".Page.Dashboard.DashboardActivity" />
    <activity android:name=".Page.PetProfiles.PetProfilesActivity" />
    <activity android:name=".Page.PetProfiles.ViewPetProfilesActivity" />
    <activity android:name=".Page.HealthTracker.HealthTrackerActivity" />
    <activity android:name=".Page.HealthTracker.SimpleActivity" />
    <activity android:name=".Page.DietPlanner.DietPlannerActivity" />
    <activity android:name=".Page.DietPlanner.AddEditDietActivity" />
    <activity android:name=".Page.DietPlanner.DietDetailsActivity" />

</application>

</manifest>
